extends: default
rules:
  braces:
    forbid: false
    level: warning
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
    max-spaces-inside: 1
    min-spaces-inside: 1
  brackets:
    level: warning
    max-spaces-inside: 1
  colons:
    level: warning
    max-spaces-before: 1
    max-spaces-after: 50
  commas:
    level: warning
  comments: disable
  comments-indentation: disable
  document-start: disable
  empty-lines:
    level: warning
    max: 1
    max-start: 0
    max-end: 0
  hyphens:
    level: warning
  indentation:
    level: warning
    indent-sequences: consistent
  line-length: disable
  truthy: disable
