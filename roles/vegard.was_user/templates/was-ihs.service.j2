[Unit]
Description=The IBM HTTP Server
After=network.target remote-fs.target nss-lookup.target
Documentation=https://help.hcltechsw.com/connections/v7/admin/welcome/welcome_admin.html

[Service]
Type=forking
Environment=APACHE_STARTED_BY_SYSTEMD=true
ExecStart={{ ihs_root_folder }}/bin/apachectl -k start
ExecStop={{ ihs_root_folder }}/bin/apachectl -k graceful-stop
ExecReload={{ ihs_root_folder }}/bin/apachectl -k graceful
KillMode=mixed
PrivateTmp=true
Restart=on-abort
OOMPolicy=continue

[Install]
WantedBy=multi-user.target
